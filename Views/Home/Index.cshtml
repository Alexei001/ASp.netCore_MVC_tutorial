@model IEnumerable<Employee>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@{

    ViewBag.Title = "Employee List";
}


<div class="card-deck" style="height:auto;display: flex; flex-wrap: wrap;">
    @foreach (var item in Model)
    {
        <div class="card border-primary mb-3 " style="width:25%;height:auto;">
            <div class="card-header">
                <h5 class="card-title">@item.Name</h5>
            </div>
            <img class="card-img-top text-center" src="~/images/@item.ImagePath" style="max-width:350px;height:250px;" alt="Card image cap" asp-append-version="true">
            <div class="card-footer text-sm-center">
                <a class="btn btn-outline-info" asp-controller="home" asp-action="details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-outline-warning" asp-controller="home" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-outline-danger">Delete</a>
            </div>
        </div>

    }
</div>
