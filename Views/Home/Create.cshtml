@model EmployeeCreateViewModel


@{
    ViewBag.Title = "Employee Create";
}


<form enctype="multipart/form-data" asp-controller="home" asp-action="create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10" style="margin-bottom:20px;">
            <span class="text-danger" asp-validation-for="Name"></span>
            <input asp-for="Name" class="form-control" placeholder="Name" />

        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10" style="margin-bottom:20px;">
            <span class="text-danger" asp-validation-for="Email"></span>
            <input asp-for="Email" class="form-control" placeholder="Email">

        </div>

    </div>

    <div class="form-group row">
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10" style="margin-bottom:20px;">
            <span asp-validation-for="Department" class="text-danger"></span>
            <select asp-for="Department" class="form-select form-select-sm"
                    asp-items="Html.GetEnumSelectList<DeptEnum>()">
                <option value="">Please Select</option>
            </select>

        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Photos" class="col-sm-2 col-form-label custom-file-label"></label>
        <div class="col-sm-10" style="margin-bottom:20px;">
            <input multiple asp-for="Photos" id="inputImage01" class="form-control custom-file-input">

        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>

</form>

