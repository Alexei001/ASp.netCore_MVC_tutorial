@model CreateRoleAdministrationViewModel;

@{
    ViewBag.Title = "Create Role Page";
}


<div style=" max-width: 100%; height: auto; display: flex; justify-content: center;">
    <form asp-controller="Administration" asp-action="CreateRole" method="post" class="mt-3 bg-light border-primary" style="width: 70%; border-radius: 5px; padding: 10px 10px; ">
        <h2 class="card-title" style="margin-bottom:20px;">Create Role</h2>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-2 col-form-label custom-file-label" style="width:30%;"></label>
            <div class="col-sm-10" style="margin-bottom:20px;">
                <input asp-for="RoleName" class="form-control custom-file-input">
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <a asp-controller="Administration" asp-action="GetRoles" class="btn btn-outline-danger fw-bold">
                    <i class="bi bi-arrow-left"></i>
                    Back
                </a>
                <button type="submit" class="btn btn-outline-primary fw-bold">
                    <i class="bi bi-plus-square-fill"></i>
                    Create
                </button>

            </div>
        </div>

    </form>
</div>