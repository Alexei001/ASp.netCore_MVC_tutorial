@model ChangePasswordViewModel;

@{
    ViewBag.Title = "Change Password";
}

<div style=" max-width: 100%; height: auto; display: flex; justify-content: center;">
    <form asp-controller="Account" asp-action="ChangePassword" method="post" class="mt-3" style="width: 50%; border-radius: 5px; padding: 10px 10px; ">
        <h2 class="card-title" style="margin-bottom:20px;">User Registration</h2>
        <div class="form-group row">
            <label asp-for="CurrentPassword" class="col-sm-2 col-form-label custom-file-label"></label>
            <div class="col-sm-10" style="margin-bottom:20px;">
                <input asp-for="CurrentPassword" class="form-control custom-file-input">
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label custom-file-label"></label>
            <div class="col-sm-10" style="margin-bottom:20px;">
                <input asp-for="Password" class="form-control custom-file-input">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label custom-file-label"></label>
            <div class="col-sm-10" style="margin-bottom:20px;">
                <input asp-for="ConfirmPassword" class="form-control custom-file-input">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Cancel</a>
            </div>
        </div>

    </form>
</div>
