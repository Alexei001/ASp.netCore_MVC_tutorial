@model ResetPasswordViewModel;

@{
    ViewBag.Title = "Reset Password";
}

<div class="card w-50">
    <div class="card-header">
        <div class="card-title"><h5>Reset Password</h5></div>
    </div>
    <div class="card-body">
        <form asp-action="ResetPassword" asp-controller="Account" method="post">
            <input asp-for="token" hidden>
            <input asp-for="Email" hidden>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="NewPassword" class="col-sm-2 col-form-label custom-file-label"></label>
                <div class="col-sm-10" style="margin-bottom:20px;">
                    <input asp-for="NewPassword" class="form-control custom-file-input">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label custom-file-label"></label>
                <div class="col-sm-10" style="margin-bottom:20px;">
                    <input asp-for="ConfirmPassword" class="form-control custom-file-input">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <input class="btn btn-primary" type="submit" value="Submit" />
                </div>
            </div>
        </form>
    </div>
</div>
