@model ForgotPasswordViewModel;

@{
    ViewBag.Title = "Forgot Password";
}

<div class="card w-50">
    <div class="card-header">
        <div class="card-title">Forgot Password</div>
    </div>
    <div class="card-body">
        <form asp-action="ForgotPassword" asp-controller="Account" method="post">

            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label custom-file-label"></label>
                <div class="col-sm-10" style="margin-bottom:20px;">
                    <input asp-for="Email" class="form-control custom-file-input">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row"><div class="col-sm-10"><input class="btn btn-primary" type="submit" value="Submit" /></div></div>
        </form>
    </div>
</div>
